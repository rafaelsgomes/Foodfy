{% extends "layout.njk" %}

{% block head %}
    <title>Foodfy - Detalhes da receita {{recipe.title}}</title>
{% endblock %}

{% block search %}
    {% include "user/recipes/search-form.njk" %}
{% endblock %}

{% block content %}
    <div class="recipe">
                <img src="{{recipe.image}}" class="card-image" alt="Foto do prato">
                <h2 class='recipe-title'>{{recipe.title}}</h2>
                    <h5 class="recipe-author">{{recipe.author}}</h5>
                <div class="recipe-details">
                    <div class="recipe-ingredients">
                        <div class="details-header">
                            <h2>Ingredientes</h2><span>Esconder</span>
                        </div>
                        
                        <ul>
                           {% for ingredient in recipe.ingredients %}
                               <li>{{ingredient}}</li>
                           {% endfor %}
                        </ul>              
                    </div>
                    <div class="recipe-preparation hide">
                        <div class="details-header">
                            <h2>Modo de preparo</h2><span>Mostrar</span>
                        </div>
                        
                        <ul>
                            {% for preparation in recipe.preparation %}
                               <li>{{preparation}}</li>
                           {% endfor %}
                        </ul>              
                    </div>
                    <div class="recipe-information">
                        <div class="details-header">
                            <h2>Informações adicionais</h2><span>Esconder</span>
                        </div>
                        <p>{{recipe.information}}</p>             
                    </div>
                </div>
            </div>

{% endblock %}