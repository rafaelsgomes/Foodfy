{% extends "layout.njk" %}

{% block search %}
    {% include "user/recipes/search-form.njk" %}
{% endblock %}

{% block content %}
    <!-- Destaque -->
    <div class="banner">
        <div class="banner-info">
            <h1>As melhores Receitas</h1>
            <p>Aprenda a construir os melhores pratos com receitas criadas por profissionais do mundo inteiro.</p>
        </div>
        <img src="/assets/chef.png" alt="">
    </div>

    <!-- Mais Acessadas -->
    <div class="recipes">
        <h1>Nossas receitas</h1>
        <div class="cards">
        {% for recipe in recipes %}
            <div class="card" data-id="{{recipe.id}}">
                <img src="{{recipe.image}}" alt="Foto do prato" class="card-image">
                <div class="recipe-info">
                    <h2 class='recipe-title'>{{recipe.title}}</h2>
                    <h5 class="recipe-author">por {{recipe.chef_name}}</h5> 
                </div>
            </div>
        {% endfor %} 
        </div>
    </div>  
</div>

{% endblock %}
{% block extend %}
    {% include "modal.njk" %}
{% endblock %}
{% block js %}
        <script src="/JS/modal.js"></script>
{% endblock %}