{% extends "layout.njk" %}

{% block head %}
    <title>Foodfy - Detalhes da receita {{recipe.title}}</title>
{% endblock %}

{% block search %}
    {% include "home/recipes/search-form.njk" %}
{% endblock %}

{% block content %}
    <div class="recipe content">
                <div class="image-gallery">
            <div class="highlight">
                {% if not images[0] %}
                <img src="http://placehold.it/500x500?text=Produto Sem Foto" alt="">
                {% else %}
                    <img src="{{images[0].src}}" alt="{{images[0].name}}" class="card-image">
                {% endif %}
            </div>
            <div class="gallery-preview">
                {% for image in images %}
                <img src="{{image.src}}" alt="{{image.name}}" {% if loop.index0 == 0 %} class="active" {% endif %} onclick="ImageGallery.setImage(event)">
                {% endfor %}
            </div>
        </div>
                <h2 class='recipe-title'>{{recipe.title}}</h2>
                    <h5 class="recipe-author">por {{recipe.chef_name}}</h5>
                <div class="recipe-details">
                    <div class="recipe-ingredients">
                        <div class="details-header" onclick="ShowOrHide.targetEvent(event)">
                            <h2>Ingredientes</h2><span>Esconder</span>
                        </div>
                        
                        <ul>
                           {% for ingredient in recipe.ingredients %}
                               <li>{{ingredient}}</li>
                           {% endfor %}
                        </ul>              
                    </div>
                    <div class="recipe-preparation hide">
                        <div class="details-header" onclick="ShowOrHide.targetEvent(event)">
                            <h2>Modo de preparo</h2><span>Mostrar</span>
                        </div>
                        
                        <ul>
                            {% for preparation in recipe.preparation %}
                               <li>{{preparation}}</li>
                           {% endfor %}
                        </ul>              
                    </div>
                    <div class="recipe-information">
                        <div class="details-header" onclick="ShowOrHide.targetEvent(event)">
                            <h2>Informações adicionais</h2><span>Esconder</span>
                        </div>
                        <p>{{recipe.information}}</p>             
                    </div>
                </div>
            </div>

{% endblock %}