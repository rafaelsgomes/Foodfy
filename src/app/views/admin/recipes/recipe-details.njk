{% extends "layout-admin.njk" %}

{% block content %}
    <div class="recipe content">
        <div class='admin-header'>
             <h2>Receita: {{recipe.title}}</h2>
            <a href="/admin/recipe/{{recipe.id}}/edit">Editar Receita</a>
        </div>
        <div class="image-gallery">
            <div class="highlight">
                {% if not images[0] %}
                <img src="http://placehold.it/500x500?text=Produto Sem Foto" alt="">
                {% else %}
                    <img src="{{images[0].src}}" alt="{{images[0].name}}" class="card-image">
                {% endif %}
            </div>
            <div class="gallery-preview">
                {% for image in images %}
                <img src="{{image.src}}" alt="{{image.name}}" {% if loop.index0 == 0 %} class="active" {% endif %} onclick="ImageGallery.setImage(event)">
                {% endfor %}
            </div>
        </div>
        
        <h2 class='recipe-title'>{{recipe.title}}</h2>
        <h5 class="recipe-author">{{recipe.chef_name}}</h5>
        <div class="recipe-details">
            <div class="recipe-ingredients">
                <div>
                    <h2>Ingredientes</h2>
                </div>

                <ul>
                    {% for ingredient in recipe.ingredients %}
                        <li>{{ingredient}}</li>
                    {% endfor %}
                </ul>
            </div>
            <div class="recipe-preparation">
                <div>
                    <h2>Modo de preparo</h2>
                </div>

                <ul>
                    {% for preparation in recipe.preparation %}
                        <li>{{preparation}}</li>
                    {% endfor %}
                </ul>
            </div>
            <div class="recipe-information">
                <div>
                    <h2>Informações adicionais</h2>
                </div>
                <p>{{recipe.information}}</p>
            </div>
        </div>
    </div>
{% endblock %}