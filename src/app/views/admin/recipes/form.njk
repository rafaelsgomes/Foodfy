<div class="recipe-item">
    <h2>Imagem da receita</h2>
    <div id="image-upload-container">
        <div id="images-upload">
            <input type="file" name="images" id="images-input" multiple accept="image/*" onchange="ImagesUpload.filesInput(event)">
            <i class="material-icons">add</i>
        </div>
    <div id="images-preview">
        {% if images %}
            {% for image in images %}
            <div class="image" id="{{image.id}}">
                <img src="{{image.src}}" alt="{{image.name}}">
                <i class="material-icons" onclick="ImagesUpload.removeOldImages(event)">delete_outline</i>
            </div>
            {% endfor %}
            <input type="hidden" name="removed_images">
        {% endif %}
    </div>
    </div>
</div>
<div class="recipe-item">
    <h2>Nome da receita</h2>
    <input type="text" name="title" value='{{recipe.title}}'>
</div>
<div class="recipe-item">
    <h2>Autor da receita</h2>
    <select name="chef">
        <option disabled>Selecione o Chef autor da receita</option>
        {% for chef in chefs %}
            <option value="{{chef.id}}" {% if recipe.chef_id == chef.id %} selected {% endif %}>{{chef.name}}</option>
        {% endfor %}
    </select>
</div>
<div class="recipe-item">
    <h2>Ingredientes</h2>
    <div id="ingredients">
        {% if recipe.ingredients %}
            {% for ingredient in recipe.ingredients %}
            <div class='ingredient'>
                <input type="text" name="ingredients[]" value='{{ingredient}}'>
            </div>
            {% endfor %}
        {%else%}
            <div class='ingredient'>
                <input type="text" name="ingredients[]">
            </div>
        {% endif %}
    </div>
    <button type='button' class="add-ingredient" onclick="AddInputs.buttonAdd(event)">Adicionar Ingrediente</button>
</div>
<div class="recipe-item">
    <h2>Modo de Preparo</h2>
    <div id="preparations">
        {% if recipe.preparation %}
            {% for step in recipe.preparation %}
            <div class='step'>
                <input type="text" name="preparation[]" value='{{step}}'>
            </div>
            {% endfor %}
        {%else%}
            <div class='step'>
                <input type="text" name="preparation[]">
            </div>
        {% endif %}
    </div>
    <button type='button' class='add-step' onclick="AddInputs.buttonAdd(event)">Adicionar Novo Passo</button>
</div>

<div class="recipe-item">
    <h2>Informações Adicionais</h2>
    <textarea name="information" id="" cols="30" rows="10">{{recipe.information}}</textarea>
</div>