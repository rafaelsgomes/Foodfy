{% extends "admin/profile/session-layout.njk" %}

{% block content %}
    <div class="session content">
        <h1>Iniciar Sess√£o</h1>
        <form id="login" action="/admin/profile/login" method="POST">
            <div class="item">
                <h2>Email</h2>
                <input type="text" name="email" value='{{user.email}}' placeholder="Digite seu email" onblur="EmailValidator.isEmail(this)">
            </div>
            <div class="item">
                <h2>Senha</h2>
                <input type="password" name="password" placeholder="Digite sua senha">
            </div>
        </form>
        <div>
            <a href="/admin/profile/forgot-password">Perdeu a senha?</a>
            <button form="login" type="submit" class="btn">Acessar</button>   
        </div>
    </div>
{% endblock %}